<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Movies.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Movies.H2" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Movies.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/montserrat_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Movies.S1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Movies.S2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.Button" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Movies.B1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="UnfilledBorderedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/Movies.Button</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/medium_margin</item>
        <item name="strokeColor">@color/dark</item>
        <item name="strokeWidth">@dimen/medium_margin</item>
        <item name="rippleColor">#33AAAAAA</item>
    </style>


    <style name="RippleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:background">@drawable/text_ripple</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:textAppearance">@style/Movies.S1</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>